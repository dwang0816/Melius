<h1> Sign Up </h1>

<% if flash[:errors] %>
 <ul>
   <% flash[:errors].each do |err_message| %>
     <li>
       <%= err_message %>
     </li>
   <% end %>
 </ul>
<% end %>

<%= form_for @user do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>


    <%= f.label :age %>
    <%= f.number_field :age %>


    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :workspace_id %>
    <%= f.collection_select(:workspace_id, @workspaces, :id, :name) %>

    <%= f.label :email %>
    <%= f.email_field :email %>

    

    <%= f.label :password %>
    <%= f.password_field :password %>


    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>


    <%= f.submit "Sign-Up!" %>

<% end %>