<div id>
<div class="login_title">
<%= Melius %>
</div>


<div class="login">
    <%= form_tag "/login" do %>
      <div class="login_form">
        <%= label_tag :email %>
        <%= email_field_tag :email %>
        <br><%= label_tag :password %>
        <%= password_field_tag :password %>
      </div>
          <div class="login_button">
        <br><%= submit_tag "Login" %>
          </div>
    <% end %>
    <%= link_to "Sign Up", new_user_path %>
</div>

<% if flash["message"]%>
<%= flash["message"]%>
<% end %>


